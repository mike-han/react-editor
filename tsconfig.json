{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "strict": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "jsx": "react",
    "allowJs": true
  }
}